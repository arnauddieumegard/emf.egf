<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.egf.core.ui.viewpoint.editor.contributor">
         <contribution
               class="org.eclipse.egf.pattern.ui.PatternViewpointContributor">
         </contribution>
   </extension>

	<extension
         point="org.eclipse.ui.editors">
    	<editor
            name="%patternEditorLabel"
            extensions="fcore"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.egf.pattern.ui.editors.PatternEditorContributor"
            class="org.eclipse.egf.pattern.ui.editors.PatternEditor"
            id="org.eclipse.egf.pattern.ui.editors.PatternEditor">
      	</editor>
      	<editor
            name="%patternTemplateEditorLabel"
            extensions="fcore"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.egf.pattern.ui.editors.PatternTemplateEditorContributor"
            class="org.eclipse.egf.pattern.ui.editors.PatternTemplateEditor"
            id="org.eclipse.egf.pattern.ui.editors.PatternTemplateEditor">
      	</editor>
      	
   	</extension>

	<extension point="org.eclipse.ui.editors.documentProviders"> 
	    <provider 
	        inputTypes="org.eclipse.egf.pattern.ui.editors.PatternMethodEditorInput" 
	        class="org.eclipse.ui.editors.text.FileDocumentProvider" 
	        id="org.eclipse.egf.pattern.ui.editors.PatternMethodDocumentProvider"> 
	    </provider> 
	</extension>

   	<extension
         point="org.eclipse.ui.popupMenus">
      	<objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="test.contribution1">
        	<action
               label="Open Pattern"
               class="org.eclipse.egf.pattern.ui.editors.actions.OpenPatternDebugAction"
               enablesFor="1"
               id="test.open.pattern">
         	</action>
		</objectContribution>
      	<objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="test.contribution1">
        	<action
               label="Open Pattern (read only)"
               class="org.eclipse.egf.pattern.ui.editors.actions.OpenReadOnlyPatternDebugAction"
               enablesFor="1"
               id="test.open.pattern">
         	</action>
		</objectContribution>
       	<objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="test.contribution1">
        	<action
               label="Open Templates"
               class="org.eclipse.egf.pattern.ui.editors.actions.OpenPatternTemplateDebugAction"
               enablesFor="1"
               id="test.open.pattern.template">
         	</action>
		</objectContribution>
   	</extension>
   
   	<extension point="org.eclipse.ui.elementFactories">
   		<factory id="org.eclipse.egf.pattern.ui.pattern.factory.id" class="org.eclipse.egf.pattern.ui.editors.PatternElementFactory" /> 
 	</extension>
   
    <extension
        point="org.eclipse.emf.transaction.editingDomains">
    	<editingDomain
           factory="org.eclipse.egf.pattern.ui.editors.domain.PatternEditingDomainFactory"
           id="org.eclipse.egf.pattern.ui.editors.PatternEditingDomain"/>
  	</extension>
    <extension
          id="PatternBuilder"
          point="org.eclipse.core.resources.builders"
          name="%EGFPatternBuilder">
       <builder>
       		<run
               class="org.eclipse.egf.pattern.ui.builder.PatternBuilder">
       		</run>
       </builder>
    </extension>
    <extension
          point="org.eclipse.emf.validation.constraintProviders">
       <category
             id="org.eclipse.egf.model.pattern"
             name="pattern">
       </category>
       <constraintProvider
             cache="true"
             class="org.eclipse.egf.pattern.ui.editors.validation.NonEmptyNamesConstraint"
             mode="Live">
          <package
                namespaceUri="org.eclipse.egf.pattern.ui.*">
          </package>
          <constraints
                categories="org.eclipse.egf.model.pattern">
             <constraint
                   class="org.eclipse.egf.pattern.ui.editors.validation.NonEmptyNamesConstraint"
                   id="org.eclipse.egf.pattern.ui.NameNotEmpty"
                   lang="Java"
                   mode="Live"
                   name="NON EMPTY NAME"
                   severity="ERROR"
                   statusCode="1">
                <message>
                   A {0} has been found to have no name or title.
                </message>
                <description>
                   All items in a library model should have some unique identifier or name.
                </description>
                <target
                      class="Pattern">
                   <event
                         name="Set">
                      <feature
                            name="name">
                      </feature>
                   </event>
                   <event
                         name="Unset">
                      <feature
                            name="name">
                      </feature>
                   </event>
                </target>
             </constraint></constraints>
       </constraintProvider>
    </extension>
    <extension
          point="org.eclipse.emf.validation.constraintBindings">
       <clientContext
             default="false"
             id="org.eclipse.egf.pattern.ui.patternContext">
          <selector
                class="org.eclipse.egf.pattern.ui.editors.selector.ValidationDelegateClientSelector">
          </selector>
       </clientContext>
       <binding
             category="org.eclipse.egf.model.pattern"
             context="org.eclipse.egf.pattern.ui.patternContext">
       </binding>
    </extension>
  	
  
  	
   
</plugin>
