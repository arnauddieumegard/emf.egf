<plugin>

  <!-- ================================================================================= -->
  <!-- ProductionPlan Model                                                              -->
  <!-- ================================================================================= --> 
  
  <extension 
    point="org.eclipse.emf.ecore.generated_package"
  >
    <package
      uri="http://www.eclipse.org/egf/1.0.0/productionplan"
      class="org.eclipse.egf.model.productionplan.ProductionPlanPackage"
      genModel="model/ProductionPlan.genmodel"
    />
  </extension>  
  
  <extension 
    point="org.eclipse.emf.ecore.extension_parser"
  >
    <parser
      type="pp"
      class="org.eclipse.egf.model.productionplan.util.ProductionPlanResourceFactoryImpl"
    />
  </extension>
  
  <!-- ================================================================================= -->
  <!-- Extension Points Definition                                                       -->
  <!-- ================================================================================= -->
  
  <extension-point 
    id="taskInvocation" 
    name="%EGFTaskInvocationExtensionPoint" 
    schema="schema/taskInvocation.exsd"
  />
    
  <!-- ================================================================================= -->
  <!-- EGF Platform Manager                                                              -->
  <!-- ================================================================================= -->  

  <extension
    point="org.eclipse.egf.core.platform.manager"
  >
    <manager
      extension="org.eclipse.egf.model.productionplan.taskInvocation"      
      class="org.eclipse.egf.model.productionplan.internal.invocation.PlatformTaskInvocationFactory"
    />             
  </extension>    

</plugin>
