<plugin>

  <!-- ================================================================================= -->
  <!-- Extension Points Definition                                                       -->
  <!-- ================================================================================= -->
  
  <extension-point 
    id="fcore" 
    name="%EGFFcoreExtensionPoint" 
    schema="schema/fcore.exsd"
  />  

  <extension-point 
    id="task" 
    name="%EGFTaskExtensionPoint" 
    schema="schema/task.exsd"
  />
    
  <!-- ================================================================================= -->
  <!-- EGF Platform Manager                                                              -->
  <!-- ================================================================================= -->  

  <extension
    point="org.eclipse.egf.core.platform.manager"
  >
    <manager
      extension="org.eclipse.egf.core.fcore"    
      class="org.eclipse.egf.core.fcore.PlatformFcoreFactory"
    />
    <manager
      extension="org.eclipse.egf.core.task"      
      class="org.eclipse.egf.core.task.PlatformTaskFactory"
    />             
  </extension>  
    
  <!-- ================================================================================= -->
  <!-- Natures                                                                           -->
  <!-- ================================================================================= -->

  <extension
    point="org.eclipse.core.resources.natures"  
    id="FcoreNature"
    name="%EGFFcoreNature"
  >
    <runtime>
      <run
        class="org.eclipse.egf.core.internal.natures.FcoreProject"
      />
    </runtime>
  </extension>  

</plugin>
