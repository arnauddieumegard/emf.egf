<plugin>

  <!-- ================================================================================= -->
  <!-- propertyTesters                                                                   -->
  <!-- ================================================================================= -->

  <extension 
    point="org.eclipse.core.expressions.propertyTesters"
  >
  
    <propertyTester
      id="org.eclipse.egf.producer.ui.testers.FcoreResourceTester"
      type="org.eclipse.core.resources.IFile"
      namespace="org.eclipse.egf.producer.ui"
      properties="fcoreResource"
      class="org.eclipse.egf.producer.ui.testers.FcoreResourceTester"
    />
            
  </extension>
  
  <!-- ================================================================================= -->
  <!-- popupMenus                                                                        -->
  <!-- ================================================================================= -->
  
  <extension
    point="org.eclipse.ui.popupMenus"
  >
  
    <objectContribution
      id="org.eclipse.egf.producer.ui.activity.contribution"
      objectClass="org.eclipse.egf.model.fcore.Activity"
    >
    
      <action
        class="org.eclipse.egf.producer.ui.internal.actions.RunActivityAction"
        icon="$nl$/icons/full/elcl16/runactivity.gif"
        id="org.eclipse.egf.model.producer.ui.activity.contribution.action.run.activity"
        label="%RunActivityAction_label"
        enablesFor="1"
        menubarPath="additions"
        tooltip="%RunActivityAction_tooltip"
      />
    
    </objectContribution>
  
  </extension>
  
  <extension
    point="org.eclipse.ui.popupMenus"
  >
  
    <objectContribution
      id="org.eclipse.egf.producer.ui.activity.contribution"
      objectClass="org.eclipse.core.resources.IFile"
    >
    
      <enablement>
        <test
          forcePluginActivation="true"
          property="org.eclipse.egf.producer.ui.fcoreResource"
        />
      </enablement>
    
      <action
        class="org.eclipse.egf.producer.ui.internal.actions.RunActivityAction"
        icon="$nl$/icons/full/elcl16/runactivity.gif"
        id="org.eclipse.egf.model.producer.ui.activity.contribution.action.run.activity"
        label="%RunActivityAction_label"
        enablesFor="1"
        menubarPath="additions"
        tooltip="%RunActivityAction_tooltip"
      />
    
    </objectContribution>
  
  </extension>      
  
  <!-- ================================================================================= -->
  <!-- decorators                                                                        -->
  <!-- ================================================================================= -->  
  
  <extension
    point="org.eclipse.ui.decorators"
  >
    <decorator
      class="org.eclipse.egf.producer.ui.decorators.MandatoryLabelDecorator"
      id="org.eclipse.egf.producer.ui.decorators.mandatorylabeldecorator"
      label="%activityContractMandatory_Label"
      lightweight="true"
      location="TOP_LEFT"
      state="true"
    >
      <enablement>
        <objectClass
          name="org.eclipse.egf.model.fcore.Contract"
        />
      </enablement>
    </decorator>
  </extension>    
  
  <!-- ================================================================================= -->
  <!-- ActionSets                                                                        -->
  <!-- ================================================================================= -->  
  
  <extension
    point="org.eclipse.ui.actionSets"
  >
  
    <actionSet
      label="%EGFActionSet_label"
      description="%EGFActionSet_description"
      visible="false"
      id="org.eclipse.egf.ui.action.set"
    >
                  
      <action
        id="org.eclipse.egf.ui.action.set.global.run.activity.action"  
        toolbarPath="org.eclipse.debug.ui.launchActionSet/debug"         
        class="org.eclipse.egf.producer.ui.internal.actions.GlobalRunActivityAction"
        definitionId="org.eclipse.egf.ui.action.set.global.run.activity.action.definition"
        icon="$nl$/icons/full/elcl16/runactivity.gif"
        label="%RunActivityAction_label"
        menubarPath="org.eclipse.ui.run/runGroup"
        tooltip="%RunActivityAction_tooltip"
      />
      
    </actionSet>
    
  </extension>
  
  <extension
    point="org.eclipse.ui.commands"
  >
    
  <!-- ================================================================================= -->
  <!-- Command Run                                                                       -->
  <!-- ================================================================================= -->
    
    <command
      name="%ActionDefinition_runActivity_name"
      description="%ActionDefinition_runActivity_description"
      categoryId="org.eclipse.debug.ui.category.run"
      id="org.eclipse.egf.ui.action.set.global.run.activity.action.definition"
    />
      
  </extension>  
  
  <extension
    point="org.eclipse.ui.bindings"
  >
  
  <!-- ================================================================================= -->
  <!-- win32:  M1=CTRL,    M2=SHIFT, M3=ALT, M4=-                                        -->
  <!-- carbon: M1=COMMAND, M2=SHIFT, M3=ALT, M4=CTRL                                     -->  
  <!-- ================================================================================= -->  
  
  <!-- ================================================================================= -->
  <!-- Key Run                                                                           -->
  <!-- ================================================================================= -->
     
    <key
      sequence="M1+M2+V"
      commandId="org.eclipse.egf.ui.action.set.global.run.activity.action.definition"
      schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
    />
            
  </extension>

</plugin>
