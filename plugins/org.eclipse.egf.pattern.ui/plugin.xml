<plugin>

  <extension-point 
    id="patternGenerator" 
    name="%EGFPatternGeneratorExtensionPoint" 
    schema="schema/patternGenerator.exsd"
  />
  
  <extension-point 
    id="patternProduction" 
    name="%EGFPatternProductionExtensionPoint" 
    schema="schema/patternProduction.exsd"
  />
  
  <extension
    point="org.eclipse.ui.editors"
  >
    <editor
      class="org.eclipse.egf.pattern.ui.editor.PatternEditor"
      icon="platform:/plugin/org.eclipse.egf.model.edit/icons/full/obj16/PatternModel.gif"
      id="org.eclipse.egf.pattern.ui.editor.PatternEditor"
      name="%patternEditorName"
    />
    <editor
      class="org.eclipse.egf.pattern.ui.editor.jet.PatternJETEditor"
      icon="platform:/plugin/org.eclipse.jet.editor/icons/full/obj16/JETTemplateFile.gif"
      id="org.eclipse.egf.pattern.ui.editor.jet.PatternJETEditor"
      name="%patternJETEditorName"
    />    
  </extension>
      
</plugin>
