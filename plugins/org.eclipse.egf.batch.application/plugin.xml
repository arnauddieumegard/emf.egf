<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="app"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.eclipse.egf.batch.application.FactoryComponentRunnerApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ant.core.antTasks">
      <antTask
            class="org.eclipse.egf.batch.application.taskdefs.FactoryComponentUiRunnerTask"
            eclipseRuntime="true"
            headless="true"
            library="ant_tasks/egf.ant.tasks.jar"
            name="egf.FactoryComponentRunnerInWorkbenchWindow">
      </antTask>
      <antTask
            class="org.eclipse.egf.batch.application.taskdefs.FactoryComponentHeadlessRunnerTask"
            eclipseRuntime="true"
            headless="true"
            library="ant_tasks/egf.ant.tasks.jar"
            name="egf.FactoryComponentRunnerInHeadlessMode">
      </antTask>
   </extension>
   <extension
         point="org.eclipse.ant.core.extraClasspathEntries">
      <extraClasspathEntry
            library="ant_tasks/egf.ant.tasks.jar">
      </extraClasspathEntry>
   </extension>

</plugin>
