<plugin>
   <extension
         point="org.eclipse.egf.core.contract">
      <contract
            id="java.builder.asset.contract">
         <contractElement
               id="java.builder.asset.contract.assetProjectName"
               mandatory="true"
               name="assetProjectName"
               type="org.eclipse.egf.model.contract.type.StringTypeHolder">
            <description
                  id="java.builder.asset.contract.assetProjectName.description">
               The relative path of the project (in the workspace) to build.
            </description>
         </contractElement>
      </contract>
   </extension>
   <extension
         point="org.eclipse.egf.core.productionPlan">
      <productionPlan
            id="java.builder.asset.productionPlan">
         <assetConfiguration
               id="java.builder.asset.assetConfiguration">
         </assetConfiguration>
      </productionPlan>
   </extension>
   <extension
         point="org.eclipse.egf.core.assetConfiguration">
      <assetConfiguration
            assetId="rootAsset"
            id="java.builder.asset.assetConfiguration"
            name="java.builder.asset.assetConfiguration"
            taskFactoryId="java.builder.asset.taskFactory">
      </assetConfiguration>
   </extension>
   <extension
         point="org.eclipse.egf.core.taskFactory">
      <taskFactory
            class="org.eclipse.egf.fc.builder.java.task.JavaBuilderTaskFactory"
            id="java.builder.asset.taskFactory">
      </taskFactory>
   </extension>
   <extension
         point="org.eclipse.egf.core.factoryComponent">
      <factoryComponent
            contractId="java.builder.asset.contract"
            id="java.builder.asset"
            name="Java Project Builder"
            productionPlanId="java.builder.asset.productionPlan">
         <description
               id="java.builder.asset.description">
            This factory component builds a project located in the workspace.
         </description>
      </factoryComponent>
   </extension>

</plugin>
