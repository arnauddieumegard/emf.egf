<plugin>

<!-- ================================================================================= -->
<!-- Extension Points                                                                  -->
<!-- ================================================================================= -->

  <extension-point 
    id="pattern" 
    name="%EGFPatternExtensionPoint" 
    schema="schema/pattern.exsd"
  />
  
  <extension-point 
    id="patternCondition" 
    name="%EGFPatternConsitionExtensionPoint" 
    schema="schema/patternCondition.exsd"
  />
  
  <extension-point 
    id="patternTemplate" 
    name="%EGFPatternTemplateExtensionPoint" 
    schema="schema/patternTemplate.exsd"
  />
  
<!-- ================================================================================= -->
<!-- Preferences Initializer                                                           -->
<!-- ================================================================================= -->
  
  <extension
    point="org.eclipse.core.runtime.preferences"
  >
    <initializer
      class="org.eclipse.egf.pattern.preferences.PatternPreferencesInitializer"
    />
  </extension>
  
<!-- ================================================================================= -->
<!-- Builders                                                                          -->
<!-- ================================================================================= -->

  <extension
    point="org.eclipse.core.resources.builders"  
    id="PatternBuilder"
    name="%EGFPatternBuilder.name"
  >
    <builder>
      <run
        class="org.eclipse.egf.pattern.internal.builders.PatternBuilder"
      />
    </builder>
  </extension>

  <extension
    point="org.eclipse.core.resources.builders"  
    id="PatternTemplateBuilder"
    name="%EGFPatternTemplateBuilder.name"
  >
    <builder>
      <run
        class="org.eclipse.egf.pattern.internal.builders.PatternTemplateBuilder"
      />
    </builder>
  </extension> 
  
</plugin>
