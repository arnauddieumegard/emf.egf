<plugin>

   <extension
         point="org.eclipse.egf.core.contract">
      <contract
            id="contract.1202745857805.0">
         <contractElement
               id="contractElement.1202749050675.26"
               mandatory="true"
               name="modelRelativePath"
               type="org.eclipse.egf.model.contract.type.StringTypeHolder">
            <description
                  id="contractElement.1202749050675.26.description">
               A relative path to locate an Ecore model file against the eclipse platform.
The model API for this Ecore model must be generated once at least (i.e the generated_package extension must exist).
            </description>
         </contractElement>
         <contractElement
               id="contractElement.1202813904904.20"
               mandatory="false"
               name="generatorAdapterFactory"
               type="org.eclipse.egf.fc.generator.java.contract.type.GeneratorAdapterFactoryTypeHolder">
            <description
                  id="contractElement.1202813904904.20.description">
               A factory for adapters that modify code generation.
Matching context element must provide a class that extends org.eclipse.egf.fc.generator.java.model.AbstractGenModelGeneratorAdapterFactory.
            </description>
         </contractElement>
         <contractElement
               id="contractElement.1224165017860.14"
               mandatory="false"
               name="mergeRulesPath"
               type="org.eclipse.egf.model.contract.type.StringTypeHolder">
            <description
                  id="contractElement.1224165017860.14.description">
               Relative path to the merge rules file (JMerge).
The path starts with the plug-in id whether it is deployed or not.
This requires that the generatorAdapterFactory is provided too.
            </description>
         </contractElement>
      </contract>
   </extension>
   <extension
         point="org.eclipse.egf.core.productionPlan">
      <productionPlan
            id="productionPlan.1202745857805.1">
         <assetConfiguration
               id="assetConfiguration.1202746008443.23">
         </assetConfiguration>
      </productionPlan>
   </extension>
   <extension
         point="org.eclipse.egf.core.assetConfiguration">
      <assetConfiguration
            assetId="rootAsset"
            id="assetConfiguration.1202746008443.23"
            name="generate"
            taskFactoryId="taskFactory.1202746174699.24">
      </assetConfiguration>
   </extension>
   <extension
         point="org.eclipse.egf.core.taskFactory">
      <taskFactory
            class="org.eclipse.egf.emf.generator.edit.task.EditGeneratorTaskFactory"
            id="taskFactory.1202746174699.24">
      </taskFactory>
   </extension>
   <extension
         point="org.eclipse.egf.core.factoryComponent">
      <factoryComponent
            contractId="contract.1202745857805.0"
            id="asset.1202745857805.2"
            name="EMF Edit Code Generator"
            productionPlanId="productionPlan.1202745857805.1">
         <description
               id="asset.1202745857805.2.description">
            This factory component runs EMF Edit code generator for an Ecore model.
The model API for given Ecore model must be generated before running this factory component.
The project (and the source folder) that hosts the generated code is got from the genModel related to the given Ecore model. 
Default code generation behavior can be customized by providing a generator adapter factory.
         </description>
      </factoryComponent>
   </extension>

</plugin>
