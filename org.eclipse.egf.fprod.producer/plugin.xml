<plugin>

  <!-- ================================================================================= -->
  <!-- Extension Points Definition                                                       -->
  <!-- ================================================================================= -->
  
  <extension-point 
    id="taskInvocation" 
    name="%EGFTaskInvocationExtensionPoint" 
    schema="schema/taskInvocation.exsd"
  />
      
  <!-- ================================================================================= -->
  <!-- Activity Manager Producer                                                         -->
  <!-- ================================================================================= -->
  
  <extension
    point="org.eclipse.egf.producer.activityManagerProducer"
  >
    <activityManagerProducer
      class="org.eclipse.egf.fprod.producer.internal.manager.TaskManagerProducer"
    />
  </extension>
  
  
  <!-- ================================================================================= -->
  <!-- Activity Production Context Producer                                              -->
  <!-- ================================================================================= -->
  
  <extension
    point="org.eclipse.egf.producer.activityProductionContextProducer"
  >
    <activityProductionContextProducer
      class="org.eclipse.egf.fprod.producer.internal.context.FactoryComponentProductionContextProducer"
    />
  </extension>    
  
  <extension
    point="org.eclipse.egf.producer.activityProductionContextProducer"
  >
    <activityProductionContextProducer
      class="org.eclipse.egf.fprod.producer.internal.context.TaskProductionContextProducer"
    />
  </extension>  
     
  <!-- ================================================================================= -->
  <!-- Orchestration Manager Producer                                                    -->
  <!-- ================================================================================= -->  
  
  <extension
    point="org.eclipse.egf.producer.orchestrationManagerProducer"
  >
    <orchestrationManagerProducer
      class="org.eclipse.egf.fprod.producer.internal.manager.ProductionPlanManagerProducer"
    />
  </extension>       
    
</plugin>
