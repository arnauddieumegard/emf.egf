    id="activity" 
    name="%EGFActivityExtensionPoint" 
    schema="schema/activity.exsd"
  />
  
  <extension-point 
    id="orchestration" 
    name="%EGFOrchestrationExtensionPoint" 
    schema="schema/orchestration.exsd"
  />    
  
